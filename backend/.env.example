# Application Settings
APP_NAME=LeadGen
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=True

# Database
DATABASE_URL=postgresql://leadgen:leadgen_password@localhost:5432/leadgen_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Security
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# External API Keys
# ==================

# OpenAI (for AI-generated content)
OPENAI_API_KEY=your-openai-api-key

# Job Boards
INDEED_API_KEY=your-indeed-api-key
ZIPRECRUITER_API_KEY=your-ziprecruiter-api-key

# Lead Enrichment Services
LINKEDIN_API_KEY=your-linkedin-api-key
ZOOMINFO_API_KEY=your-zoominfo-api-key
APOLLO_API_KEY=your-apollo-api-key

# Mapping/Routing
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Feature Flags
ENABLE_JOB_SCRAPING=true
ENABLE_LEAD_ENRICHMENT=true
ENABLE_AI_GENERATION=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Cache Settings
CACHE_TTL_SECONDS=3600
DEDUPLICATION_TTL_DAYS=30
